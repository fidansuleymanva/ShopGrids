
@model SmallBanner
@{
	ViewData["Title"] = "Delete";
}

<h1>Delete SmallBanner</h1>
<div>
	<form method="post" asp-action="delete" enctype="multipart/form-data">
		<div class="row">
		<div class="mb-3 col-md-3">
			<label asp-for="Title1" class="form-label">Title1</label>
			<input  class="form-control" asp-for="Title1" placeholder="Title">
			<span class="text-danger" asp-validation-for="Title1"></span>
		</div>
		<div class="mb-3 col-md-3">
			<label asp-for="Title2" class="form-label">Title2</label>
			<input  class="form-control" asp-for="Title2" placeholder="Title2">
			<span class="text-danger" asp-validation-for="Title2"></span>
		</div>
		<div class="mb-3 col-md-2">
			<label asp-for="SalePrice" class="form-label">SalePrice</label>
			<input  class="form-control" asp-for="SalePrice" placeholder="SalePrice">
			<span class="text-danger" asp-validation-for="SalePrice"></span>
		</div>
		<div class="mb-3 col-md-2" style="margin-bottom:20px">
			<label asp-for="FormFile" class="form-label">FromFile</label>
			<input  class="form-control" asp-for="FormFile" placeholder="FromFile">
			<span class="text-danger" asp-validation-for="FormFile"></span>
			</div>
			

			<div style ="display:flex; justify-content:center;align-items:center">

		     <button type="submit" class="btn btn-primary">Delete</button>
	</form>
</div>



